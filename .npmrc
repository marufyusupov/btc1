# Lock package-lock version for consistency
package-lock=true

# Use exact versions by default for new installs
save-exact=true

# Ensure reproducible installs
prefer-frozen-lockfile=true

# Use npm registry
registry=https://registry.npmjs.org/

# Disable automatic security audits during install (can be run manually)
audit=false

# Allow legacy peer dependencies
legacy-peer-deps=true